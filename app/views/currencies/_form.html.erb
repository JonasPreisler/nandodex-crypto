<div class="panel panel-default container-3">
  <div class="panel-heading">
    <h3 class="panel-title">New currency</h3>
  </div>
  <div class="panel-body">
    <div class="form-group">


      <%= form_with(model: currency, local: true) do |form| %>
        <% if currency.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(currency.errors.count, "error") %> prohibited this currency from being saved:</h2>

            <ul>
            <% currency.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :symbol %>
          <%= form.text_field :symbol, class: 'form-control' %>
        </div>

        <div class="field">
          <%= form.number_field :user_id, value: current_user.id, class: 'form-control', type: 'hidden' %>
        </div>

        <div class="field">
          <%= form.label :invested_at %>
          <%= form.text_field :invested_at, class: 'form-control' %>
        </div>

        <div class="field">
          <%= form.label :amount_owned %>
          <%= form.text_field :amount_owned, class: 'form-control' %>
        </div>

        <br />

        <div class="actions">
          <%= form.submit "Add currency", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
