<h3>Currency Lookup</h3>
<br />
<%= form_tag home_index_path, :method => 'POST' do %>
	<%= text_field_tag 'sym', nil, placeholder: 'Enter crypto symbol', size: 50 %>
	<%= submit_tag 'Lookup Quotes', class: "btn btn-primary" %>
<% end %> 
<br />

<% if @symbol %>
	<% for x in @lookup_coin %>
		<% if @symbol == x["symbol"] %>
			<%= x["name"] %>: $<%= x["price_usd"] %><br />
			Rank: <%= x["rank"] %><br /><br />
		<% end %>
	<% end %>
<% end %>